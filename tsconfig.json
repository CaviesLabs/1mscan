{
  // This is based on https://bun.sh/docs/typescript#suggested-compileroptions
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Bun",
  "docs": "https://bun.sh/docs/typescript",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["bun", "react", "react-dom", "react/jsx-runtime"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "stripInternal": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {},
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "image.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.node.ts",
    "**/*.tsx",
    "decs.d.ts",
    "global.d.ts",
    "ui/pages/ClaimReward/ClaimRewardDetailPageContent",
    "eslint.config.**"
  ],
  "exclude": [
    "node_modules/next/image-types/global.d.ts",
    "**/*.test.ts",
    "**/*.pw.tsx",
    "node_modules",
    "node_modules_linux",
    "/public",
    "**/*.test.tsx",
    "**/*.pw.tsx",
    "**/*.pw.ts",
    "docs",
    "icons"
  ]
}
